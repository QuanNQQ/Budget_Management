<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:id="@+id/row_layout"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/textSize_type_itemView"
            android:fontFamily="@font/aclonica"
            android:id="@+id/tv_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Transaction"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_trans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user_profile" />

        <TextView
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/label"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            android:text="Ăn Uống"
            app:layout_constraintTop_toBottomOf="@id/tv_trans"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize_label"
            />

        <TextView
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/schedule"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_profile"
            android:text="03/05/2000"
            android:textSize="@dimen/textSize_date_itemView"
            />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="22"
            android:textSize="@dimen/textSize_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_profile"
            app:layout_constraintBottom_toBottomOf="@id/img_profile"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
